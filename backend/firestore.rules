rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Projects are readable by everyone, writable by admins only
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Project images chunks are readable by everyone, writable by admins only
    match /projectImages/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Contacts are readable by admins, writable by everyone
    match /contacts/{contactId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update: if request.auth != null;
    }
    
    // Settings are readable by everyone, writable by admins only
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
